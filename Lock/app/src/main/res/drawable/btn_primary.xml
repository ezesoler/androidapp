<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="0dip" android:color="@color/btn_primary_border" />
            <!--
            <gradient
                android:angle="270"
                android:endColor="@color/btn_primary_bg_press_bottom"
                android:startColor="@color/btn_primary_bg_press_top" />
            -->
            <solid android:color="@color/brand_press_primary"/>

            <padding
                android:left="1dp"
                android:right="1dp"
                />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="0dip" android:color="@color/brand_primary" />
            <solid android:color="@color/brand_primary"/>
            <padding
                android:left="1dp"
                android:right="1dp"
                />
        </shape>
    </item>
</selector>